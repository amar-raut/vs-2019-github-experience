@model Vidly.Models.Customers

@{
    ViewBag.Title = "Customerdetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Membership Type: @Model.MembershipType.MembershipTypeName</li>

    @if (Model.CustomerBirthdate.HasValue)
    {
        <li>Birthdate: @Model.CustomerBirthdate.Value.ToShortDateString()</li>
    }
</ul>
